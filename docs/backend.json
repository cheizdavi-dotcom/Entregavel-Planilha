{
  "entities": {
    "Transaction": {
      "title": "Transaction",
      "description": "Represents a single financial transaction.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "type": { "type": "string", "enum": ["income", "expense"] },
        "amount": { "type": "number" },
        "description": { "type": "string" },
        "category": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "paymentMethod": { "type": "string", "enum": ["Dinheiro", "Pix", "Cartão de Crédito"]},
        "installments": { "type": "number" }
      },
      "required": ["userId", "type", "amount", "description", "category", "date", "paymentMethod"]
    },
    "Goal": {
      "title": "Goal",
      "description": "Represents a user's financial goal.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "name": { "type": "string" },
        "currentValue": { "type": "number" },
        "totalValue": { "type": "number" }
      },
      "required": ["userId", "name", "currentValue", "totalValue"]
    },
    "Debt": {
        "title": "Debt",
        "description": "Represents a user's financial debt.",
        "type": "object",
        "properties": {
            "userId": { "type": "string" },
            "creditorName": { "type": "string" },
            "totalValue": { "type": "number" },
            "paidValue": { "type": "number" }
        },
        "required": ["userId", "creditorName", "totalValue", "paidValue"]
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/users/{userId}/transactions/{transactionId}": {
      "schema": { "$ref": "#/entities/Transaction" },
      "description": "Stores user-specific transactions."
    },
    "/users/{userId}/goals/{goalId}": {
      "schema": { "$ref": "#/entities/Goal" },
      "description": "Stores user-specific financial goals."
    },
    "/users/{userId}/debts/{debtId}": {
      "schema": { "$ref": "#/entities/Debt" },
      "description": "Stores user-specific financial debts."
    }
  }
}
